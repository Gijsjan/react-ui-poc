@import './import/*'

html, body
  padding 0
  margin 0
  height 100%

body
  .app
    .left-menu
      position fixed
      top 0
      left 0
      bottom 0
      z-index 10
      background green

    .right-menu
      position fixed
      top 0
      right 0
      bottom 0
      z-index 20
      background red

    .main
      position fixed
      top 0
      bottom 0
      left 0
      right 0
      z-index 30
      background yellow

      header
        background #EEE
        padding 10px 0

        button
          background none
          border none
          outline none

      .main-body
        height 100%

        .left, .right
          inline-block()
          width 40%
          margin 5%
          background blue
          height 100%